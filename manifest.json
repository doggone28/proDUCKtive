{
  "manifest_version": 3,
  "name": "proDUCKtive",
  "version": "1.0.0",
  "description": "A duck companion that helps you stay productive",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content.js"]
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "proDUCKtive Duck"
  },
  
  "icons": {
    "16": "public/icons/icon-16.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  },
  
  "web_accessible_resources": [{
    "resources": [
      "public/duck-static.png",
      "public/duck-animated.gif", 
      "public/quack.mp3"
    ],
    "matches": ["<all_urls>"]
  }]
}